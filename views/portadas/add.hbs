<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/portadas/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="file" class="form-control" name="portada" placeholder="Portada" autofocus>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="idarchivero">
                                <option value="none">Selecciona un Archivero</option>
                                {{#each archiveros}}
                                <option value="{{id}}">{{titulo}}</option>
                                {{/each}}
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>