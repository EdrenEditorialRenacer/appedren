<div class="container p-4">
    <div class="row">
        {{#each portadas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        
                        <img src="{{portada}}" alt="{{portada}}" width="200px" height="150px">
                         <p>{{idarchivero}}</p>  
                        
                        
                        
                       
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Portadas guadadas aun.</p>
                    <a href="/portadas/add">Crea uno!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>