<div class="container p-4">
    <div class="row">
        {{#each comics}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h2>{{titulo}}</h2>
                        <img src="../{{portada}}" alt="{{portada}}" width="200px" height="150px">
                        <h1>{{autor}}</h1>
                        <a href="/premium/documento/{{id}}"><p>{{documento}}</p></a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Comics aun en existencia.</p>

                </div>
            </div>
        {{/each}}
    </div>
</div>