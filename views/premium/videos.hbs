<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            {{#each videos}}
            <div class="card">
                <div class="card-body">
                    <h2>{{titulo}}</h2>
                     <video controls controlsList="nodownload" poster="../{{portada}}">
                        <source src="../{{documento}}" type="video/webm">
                    </video>
                    <h1>{{autor}}</h1>
                </div>
            </div>


            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay Videos aun en existencia.</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>