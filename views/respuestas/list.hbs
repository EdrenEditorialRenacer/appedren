<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            {{#each comentarios}}
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <input type="text" name="asunto" id="" value="{{asunto}}" readonly>
                    </div>
                    <div class="form-group">
                        <textarea name="comentario" cols="10" readonly>
                            {{comentario}}
                        </textarea>
                    </div>
                    <a href="/respuestas/add/{{iduser}}" class="btn btn-warn">Responder</a>
                </div>
            </div>


            {{else}}
            <div class="text-center">
                <h2>No hay Comentarios Aun</h2>
            
            </div>
            
            {{/each}}

        </div>
    </div>
</div>