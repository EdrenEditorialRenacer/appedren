<div class="container p-4">
    <div class="row">
        {{#each peliculas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2>{{titulo}}</h2>
                    <video autoplay controls src="../{{documento}}"  controlsList="nodownload"></video>
                    
            
                    <h1>{{autor}}</h1>
                    <p>{{facebook}}</p>
                        <p>{{whattsap}}</p>
                        <p>{{email}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay Peliculas aun en existencia.</p>

            </div>
        </div>
        {{/each}}
    </div>
</div>